@model IEnumerable<User>
@{
    ViewData["Title"] = "Home";
}

<hr/>
<a class="btn btn-success btn-sm" href="#">Create a New User</a>
<hr />  
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Email</th>
            <th>Birthday</th>
            <th>Location</th>
            <th>Phone</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td><img src="~/img/@user.Image" width="100"/></td>
            <td>@user.Name</td>
            <td>@user.Surname</td>
            <td>@user.Email</td>
            <td>@user.Birthday.ToString("MM/dd/yyyy")</td>
            <td>@user.Location</td>
            <td class="text-center">
                @foreach (var number in user.Phones)
                {
                    <span class="col badge badge-info">@number.PhoneNumber</span>
                }
            </td>
            <td>
                <a href="#" class="btn btn-danger btn-sm">Delete</a>
                <a href="#" class="btn btn-primary btn-sm">Update</a>
            </td>
        </tr>
        }
    </tbody>
</table>
